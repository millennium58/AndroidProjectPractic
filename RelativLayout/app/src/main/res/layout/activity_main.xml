<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Relative layout"
            android:padding="10dp"
           android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#567"
            >

        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/black"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/black"
        android:layout_below="@+id/text">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BLACK"
            android:textColor="#3F51B5"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/black"
        android:background="#3F51B5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BLUE"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yellow"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/blue"
        android:layout_alignRight="@id/black"
        android:background="#FFEB3B"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="YELLOW"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/blue"
        android:layout_toRightOf="@id/black"
        android:background="#4CAF50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="GREEN"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/yellow"
        android:background="#234567"
        android:id="@+id/navyBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAVY-BLUE"
            android:layout_centerInParent="true"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navyBlue"
        android:background="#123"></RelativeLayout>



</RelativeLayout>